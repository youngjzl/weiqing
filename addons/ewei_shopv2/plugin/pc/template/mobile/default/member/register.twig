<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ title }}</title>

    {% block css %}
        <link rel="stylesheet" href="{{ basePath }}/css/color.css">
        <link rel="stylesheet" href="{{ basePath }}/css/common.css">
        <link rel="stylesheet" href="{{ basePath }}/css/login.css">
